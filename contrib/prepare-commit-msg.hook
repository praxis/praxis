#!/bin/sh
#       Auto sign all commits to allow them to be used by the Praxis project.
#       see https://github.com/rightscale/skeletor/blob/master/CONTRIBUTING.md#sign-your-work
#
GH_USER=$(git config --get github.user)
SOB=$(git var GIT_AUTHOR_IDENT | sed -n "s/^\(.*>\).*$/Praxis-DCO-1.1-Signed-off-by: \1 \(github: $GH_USER\)/p")
grep -qs "^$SOB" "$1" || { 
	echo 
	echo "$SOB" 
} >> "$1"
